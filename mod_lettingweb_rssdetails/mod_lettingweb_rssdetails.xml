<install type="module" version="1.5.0">
  <!-- Name of the Module -->
  <name>Lettingweb Property Search Details</name> 
  
  <!-- Name of the Author -->
  <author>Khurram Aslam</author> 
  
  <!-- Version Date of the Module -->
  <creationDate>15/09/2010</creationDate> 
  
  <!-- Copyright information -->
  <copyright>All rights reserved by EWMultimedia Ltd.</copyright> 
  
  <!-- License Information -->
  <license>GPL 2.0</license> 
  
  <!-- Author's email address -->
  <authorEmail>khurram@ewmultimedia.co.uk</authorEmail> 
  
  <!-- Author's website -->
  <authorUrl>www.ewmultimedia.co.uk</authorUrl> 
  
  <!-- Module version number -->
  <version>1.0.0</version> 
  
  <!-- Description of what the module does -->
  <description>Details page of the Lettingweb API</description>
  
  <!-- Listing of all files that should be installed for the module to function -->
  <files>
  <!-- The "module" attribute signifies that this is the main controller file -->
    <filename module="mod_lettingweb_rssdetails">mod_lettingweb_rssdetails.php</filename>
    <filename>helper.php</filename>
    <filename>detailsstyle.css</filename>
    <filename>tmpl/default.php</filename>
    <filename>index.html</filename>
  </files>
  
  <!-- Optional parameters -->
  <params>
    <param name="googlemaps" type="text" default="" label="Google Maps API ID" description="Enter your Google Maps API ID" />
    <param name="contactbranch" type="text" default="" label="Contact Branch Link" description="Enter the Contact branch joomla article link" />
    <param name="noimage" type="text" default="" label="No image URL" description="Enter the image url if there is not one present" />
    <param name="nofeatures" type="text" default="Currently unavailable" label="No features message" description="Enter no features available message" />
  </params>
</install>

