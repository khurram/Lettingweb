<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.5.0">
  <!-- Name of the Module -->
  <name>Lettingweb Property Search</name> 
  
  <!-- Name of the Author -->
  <author>Khurram Aslam</author> 
  
  <!-- Version Date of the Module -->
  <creationDate>15/09/2010</creationDate> 
  
  <!-- Copyright information -->
  <copyright>All rights reserved by EWMultimedia Ltd.</copyright> 
  
  <!-- License Information -->
  <license>GPL 2.0</license> 
  
  <!-- Author's email address -->
  <authorEmail>khurram@ewmultimedia.co.uk</authorEmail> 
  
  <!-- Author's website -->
  <authorUrl>www.ewmultimedia.co.uk</authorUrl> 
  
  <!-- Module version number -->
  <version>1.0.0</version> 
  
  <!-- Description of what the module does -->
  <description>Displays property listings using the Lettingweb API</description>
  
  <!-- Listing of all files that should be installed for the module to function -->
  <files>
    <!-- The "module" attribute signifies that this is the main controller file -->
    <filename module="mod_lettingweb_rss">mod_lettingweb_rss.php</filename>
    <filename>helper.php</filename>
    <filename>tmpl/default.php</filename>
    <filename>tmpl/default2.php</filename>
    <filename>index.html</filename>
    <filename>style.css</filename>
    <filename>element/customtemplates.php</filename>
  </files>
  
  <!-- Optional parameters -->
  <params addpath="/modules/mod_lettingweb_rss/element">
  <param name="agentid" type="text" default="" label="Agent ID" description="Enter the Agent's Lettingweb ID" />
  <param name="detailspage" type="text" default="" label="Details Form Page Address" description="URL to the property details page" />
  <param name="novirtual" type="text" default="" label="No Virtual Tour Page" description="URL to the virtual tour 404 page" />
  <param name="noimage" type="text" default="" label="No image URL" description="URL to a default image if one doesn't exist" />
  <param name="perpage" type="text" default="5" label="Properties per page" description="Enter the number of properties to display per property listing page" />
  <param name="template" type="customtemplates" modulename="mod_lettingweb_rss" default="default" label="Template" description="Use this custom template file" />
  </params>
</install>